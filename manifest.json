{
  "name": "Word Warper",
  "description": "Replaces all occurrences of a source word with a target word.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "hello.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "js": [
        "content-script.js"
      ],
      "matches": [
        "https://en.wikipedia.org/*"
      ]
    }
  ]
}
